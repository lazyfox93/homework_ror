<%= form_for [:admin, @available_animal]  do |form| %>

<%= form.label :description, 'Заголовок' %>
<%= form.text_field :description, :required => true %></br>
<%= form.label :price, 'Цена' %>
<%= form.text_field :price %>
<%= form.label :quantity, 'Количество' %>
<%= form.text_field :quantity %></br>
<%= form.label :note, 'Примечание' %>
<%= form.text_field :note %></br>
<%= image_tag(@available_animal.animal_picture) if @available_animal.animal_picture? %>
<%= form.file_field :animal_picture %>
<%= form.hidden_field :animal_picture_cache %>
 <%= form.submit 'Сохранить' %>
<%- end %>