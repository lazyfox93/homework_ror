<%= form_for  @available_animal do |form| %>




  <%= form.label :description, 'Заголовок' %>
  <%= form.text_field :description %>

  <%= form.label :price , 'Цена' %>
  <%= form.text_field :price %>

  <%= form.label :quantity , 'Количество' %>
  <%= form.text_field :quantity %>

  <%= form.label :note , 'Описание' %>
  <%= form.text_field :note %>

  <%= form.label :age , 'Возраст' %>
  <%= form.text_field :age %>

  <%= form.label :weight , 'Вес' %>
  <%= form.text_field :weight %>

  <%= form.label :height , 'Рост' %>
  <%= form.text_field :height %>

  <%= form.submit 'Сохранить' %>
<%- end %>

