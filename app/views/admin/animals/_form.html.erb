<%= form_for [:admin, @animal]  do |form| %>


  <!--<%= form.label :id %>
  <%= form.text_field :id %>-->

  <%= form.label :animals_type, 'Вид' %>
  <%= form.text_field :animals_type %>

  <%= form.label :breed, 'Порода' %>
  <%= form.text_field :breed %>

  <%= form.label :description, 'Название объявления' %>
  <%= form.text_field :description %>

  <%= form.label :age, 'Возраст' %>
  <%= form.text_field :age %>

  <%= form.label :weight, 'Вес' %>
  <%= form.text_field :weight %>

  <%= form.label :height, 'Рост' %>
  <%= form.text_field :height %>

  <%= form.label :note, 'Подробное описание' %>
  <%= form.text_area :note %>


  <%= form.submit 'Сохранить' %>
