<%= form_for  @available_animal do |form| %>




  <p> <%= form.label :description, 'Заголовок' %>
  <%= form.text_field :description %> </p>

  <p> <%= form.label :price , 'Цена' %>
  <%= form.text_field :price %></p>

  <p> <%= form.label :quantity , 'Количество' %>
  <%= form.text_field :quantity %> </p>

  <p> <%= form.label :note , 'Описание' %>
  <%= form.text_field :note %> </p>

  <p><%= form.label :age , 'Возраст' %>
  <%= form.text_field :age %> </p>

  <p> <%= form.label :weight , 'Вес' %>
  <%= form.text_field :weight %> </p>

  <p> <%= form.label :height , 'Рост' %>
  <%= form.text_field :height %> </p>

  <p> <%= form.submit 'Сохранить' %> </p>
<%- end %>

